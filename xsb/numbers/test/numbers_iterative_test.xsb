:- ['../src/numbers_iterative.xsb'].
:- use_module(file_io, [fmt_write/2]).

test_fibonacci :-
    fibonacci(5, Result),
    (compare(=, Result, 5) ->
        writeln('Test 1/3 [OK]')
        ;
        writeln('Test 1/3 [FAIL]')).

test_factorial :-
    factorial(5, Result),
    (compare(=, Result, 120) ->
        writeln('Test 2/3 [OK]')
        ;
        writeln('Test 2/3 [FAIL]')).

test_sum_numbers :-
    sum_numbers(5, Result),
    (compare(=, Result, 15) ->
        writeln('Test 3/3 [OK]')
        ;
        writeln('Test 3/3 [FAIL]')).

run_tests :-
    test_fibonacci,
    test_factorial,
    test_sum_numbers.